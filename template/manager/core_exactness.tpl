[[ extends "base/main.tpl" ]][[ block content ]]	<div id="main-container"><script type="text/javascript" src="/js/jquery.tablesorter.js"></script> <link rel="stylesheet" href="/styles/tablesorter/style.css" type="text/css" id="" media="print, projection, screen" />[[raw ]]<script>	$(document).ready(function(){ 		$(".tablesorter").tablesorter({sortList: [[1,1]]});	}); 	function deleteRow(obj,query){		$(obj).parent().parent().remove();		//alert(query);		//alert( $("#word").val() );		str = $("#word").val();		tmp = str.replace('\n'+query+'\n',"\n");		if(tmp.length == str.length){			tmp = str.replace(query+'\n',"");			if(tmp.length == str.length){				tmp = str.replace('\n'+query,"");			}		}		$("#word").val( tmp );		$("#count").html(parseInt($("#count").html()) - 1);	}function showWordsSubmit(){	str = ($("#word").val());	var arr = str.split("\n");	for(var i = 0;i<arr.length;i++){		xajax_getwordStat(arr[i],++startId,'additional');	}	return false;}</script>  [[endraw]]	<h1>{modul.caption}</h1>	<br />		[[if querys ]]	<h2>Всего запросов <span id="count" >{df('sizeof',querys)}</span></h2>		<form action="./core_price" method="POST" >		<input type="hidden" name="action" value="add_words_from_one" />		<input type="text" name="url" value="" />		<table style="width:400px;" class="tablesorter" id="additional"  >			<thead>				<tr >					<th>Запрос</th>					<th style="width:150px;" >Количество&nbsp;&nbsp;&nbsp;&nbsp;</th>				</tr>			</thead>			[[ include TEMPLATE_PATH ~ "manager/core_exactness_inner.tpl"]]		</table>		<input type="submit" value="отправить на оценку Яндекс" /> <input type="submit" value="отправить на оценку Яндекс + Google" name="google"  /> 		</form>	[[endif]]	<form method="post">	<input type="hidden" name="action" value="add_word" />		<table width="800" >		<tr><td>			<textarea name="word" rows="9" align="left" style="width:96%;" id="word" ></textarea>		</td>		<td>			<input type="radio" name="reg" value="0" id="0" CHECKED /> <label for="0">Россия</label><br/>				[[for reg in regions ]]					<input type="radio" name="reg" value="{reg['lr']}" id="{reg['id_seo_search_system']}"/> <label for="{reg['id_seo_search_system']}">{reg['name']}</label><br/>				[[endfor]]		</td>		</tr>		<tr><td align="left" colspan="2" >		{capture}		<input type="submit" name="subm" value="Получить отчет" [[if querys]]onclick="showWordsSubmit();return false;"[[endif]] />		</td></tr>	</table>	</form></div>[[ endblock ]]